<mx:Application xmlns:mx="http://www.adobe.com/2006/mxml" layout="absolute"
	creationComplete="setup();" width="100%" height="100%" 
	backgroundColor="#FFFFFF" frameRate="99">
	<mx:Style source="src/main/eu/ecb/assets/styles/ecb.css"/>
	<mx:Script>
		<![CDATA[
			import eu.ecb.core.controller.BaseSDMXServiceController;
			import eu.ecb.core.model.SDMXDataModel;
			import eu.ecb.core.view.panel.SDMXDataPanelAdapter;
			import eu.ecb.core.view.panel.BasicDataPanel;
			import eu.ecb.core.controller.SDMXDataController;

			private function setup():void {
				var dataFile:String = (Application.application.parameters.
					hasOwnProperty("dataFile")) ? Application.application.
					parameters.dataFile : "data/inflation.xml.zlib";
				var dsdFile:String = (Application.application.parameters.
					hasOwnProperty("dsdFile")) ? Application.application.
					parameters.dsdFile : "data/ecb_icp1.xml";	
				var model:SDMXDataModel = new SDMXDataModel();
				var controller:SDMXDataController =
					new SDMXDataController(model,
					new URLRequest(dataFile), new URLRequest(dsdFile), false);
				var view:SDMXDataPanelAdapter = new BasicDataPanel(model, 
					controller, true);
				view.width = 700;
				view.height = 630;
				addChild(view);
				controller.fetchData();		
			}
		]]>
	</mx:Script>
</mx:Application>